<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?android:selectableItemBackground"
    android:padding="@dimen/margin_small">

    <ImageView
        android:id="@+id/article_avatar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/margin_large"
        android:src="@mipmap/ic_launcher" />


    <TextView
        android:id="@+id/article_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_marginTop="@dimen/margin_medium"
        android:layout_toStartOf="@+id/move_next"
        android:layout_toEndOf="@+id/article_avatar"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@android:color/black"
        android:textSize="@dimen/text_title_size"
        tools:text="appbar_scrolling_view_behavior appbar_scrolling_view_behavior appbar_scrolling_view_behavior appbar_scrolling_view_behavior" />

    <TextView
        android:id="@+id/article_sub_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/article_title"
        android:layout_margin="@dimen/margin_large"
        android:layout_toStartOf="@+id/move_next"
        android:layout_toEndOf="@+id/article_avatar"
        android:ellipsize="end"
        android:maxLines="1"
        android:textSize="@dimen/text_sub_title_size"
        tools:text="appbar_scrolling_view_behavior appbar_scrolling_view_behavior appbar_scrolling_view_behavior appbar_scrolling_view_behavior" />

    <TextView
        android:id="@+id/article_date_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/article_sub_title"
        android:layout_marginStart="@dimen/margin_large"
        android:layout_toStartOf="@+id/move_next"
        android:drawableStart="@drawable/ic_date_range_black_24dp"
        android:drawablePadding="@dimen/margin_medium"
        android:gravity="end|center_vertical"
        android:maxLines="1"
        android:textSize="@dimen/text_date_size"
        tools:text="appbar" />

    <ImageView
        android:id="@+id/move_next"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_centerVertical="true"
        android:layout_margin="@dimen/margin_medium"
        android:src="@drawable/ic_chevron_right_black_24dp" />
</RelativeLayout>